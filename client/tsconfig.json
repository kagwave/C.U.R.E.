{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false, // Updated to emit JavaScript
    "jsx": "react-jsx"
  },
  "include": [
    "./src/**/*.ts", // Updated to include all TypeScript files under src
    "./src/**/*.d.ts",
    "./src/types/*",
    "src/types/*.ts",
    "./src/types/user.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
