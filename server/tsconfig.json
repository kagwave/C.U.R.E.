{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "preserve",
    "strict": true, // Enable strict typing
    "outDir": "../../dist/server",
    "resolveJsonModule": true,
    "types": ["./src/types/*"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/types/*",
    "src/types/*.d.ts",
    "src/types/user.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build/**/*"
  ],
  "typeRoots": [
    "src/types/*",
    "node_modules/@types"
  ]
}
