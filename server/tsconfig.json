{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "preserve",
    "strict": false,
    "outDir": "../../dist/server", // Adjusted output directory
    "resolveJsonModule": true,
    "types": ["./src/types/*"]
  },
  "include": [
    "./src/**/*.ts", // Updated to include all TypeScript files under src
    "./src/**/*.d.ts",
    "./src/types/*",
    "./src/types/*.d.ts",
    "./src/types/user.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./build/**/*"
  ],
  "typeRoots": [
    "./src/types/*",
    "node_modules/@types"
  ]
}
