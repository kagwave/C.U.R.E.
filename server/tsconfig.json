{ 
  "compilerOptions":{
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "sourceMap": true,
    "jsx": "preserve",
    "strict": false,
    "outDir": "../../dist",
    "resolveJsonModule": true,
    "types": ["./src/types/*"]
  },
  "include":[ 
    "/src/types/*",
    "/src/types/*.d.ts",
    "/src/types/user.d.ts",
    "/src/types/services.d.ts",
  ],
  "exclude":[ 
    "./node_modules",
    "./build/**/*"
  ],
  "typeRoots": [
    "./src/types/*",
    "node_modules/@types"
  ],
}