{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "preserve",
    "strict": true, // Enable strict typing
    "outDir": "./dist",
    "resolveJsonModule": true,
    "types": ["./src/types/*"]
  },
  "include": [
    "./src/**/*.ts",
    "./src/types/*.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [
    "src/types",
    "node_modules/@types"
  ]
}
